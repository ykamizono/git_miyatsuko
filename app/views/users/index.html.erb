<p id="notice"><%= notice %></p>

<h1>ユーザリスト</h1>

<table>
  <thead>
    <tr>
      <th>ユーザ名</th>
      <th>パスワード</th>
      <th>年齢</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.password %></td>
        <td><%= user.age %></td>
        <td><%= link_to '詳細', user %></td>
        <td><%= link_to '編集', edit_user_path(user) %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

